<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="8dp">

    <!-- 使用NestedScrollView支持滑动 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 聊天框 -->
            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入消息..."
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:background="#1E1E1E"
                android:padding="16dp"
                android:gravity="top"
                android:minHeight="120dp"
                android:maxHeight="240dp"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:focusableInTouchMode="true"
                android:focusable="true"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 底部功能栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp">

        <Spinner
            android:id="@+id/spinnerModel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#1E1E1E"
            android:popupBackground="#1E1E1E"
            android:dropDownVerticalOffset="40dp"
            android:spinnerMode="dropdown"/>

        <ImageButton
            android:id="@+id/btnNetwork"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search_green_24dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="8dp"
            android:contentDescription="联网搜索"/>

        <ImageButton
            android:id="@+id/btnUpload"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_upload_orange_24dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="8dp"
            android:contentDescription="上传文件"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_send_blue_24dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginStart="8dp"
            android:contentDescription="发送"/>

    </LinearLayout>

</LinearLayout>
